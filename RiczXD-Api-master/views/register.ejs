<section class="py-5"></section>
<section class="py-4 bg-dark">
    <div class="container">
        <center>
            <%- include('layouts/msg')  %> 
            <%- include('layouts/errors')  %> 
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title text-center text-primary" style="font-size: 20px;">REGISTER FORM</p>
                        <p class="text-muted small-xl text-center">Cupz Rest Api</p>
                        <form method="POST" action="/users/register">
                        <!-- <form id="forms"> -->
                            <div class="form-group">
                                <input style="font-family:Arial, FontAwesome" name="username" id="username" type="text" class="form-control" id="nameInput" placeholder="&#xf007;   Username" required>
                            </div>
                            <div class="form-group">
                                <input style="font-family:Arial, FontAwesome" name="password" id="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="&#xf13e;   Password" required>
                            </div>
                            <div class="form-group">
                                <input style="font-family:Arial, FontAwesome" name="confirmPassword" id="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="&#xf13e;  Confirm Password" required>
                            </div>
                            <div>
                                 <%- recaptcha %>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary mb-2"><i class="fas fa-user-plus"></i><em class="ml-2"></em>Register</button>
                            </div>
                        </form>
                        <div class="text-center">
                            <p></p>
                            <p>Udah Punya Akun?</p>
                            <a class="btn btn-primary mb-2" href="/users/login"><i class="fas fa-sign-in-alt"></i><em class="ml-2"></em>Login</a>    
                        </div>
                    </div>
                </div>
            </div>
        </center> 
    </div>
</section>
